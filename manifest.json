{
    "manifest_version": 2,

    "name": "Web Page Time",
    "description": "Displays the duration that the current web page has been opened",
    "version": "1.0",

    "browser_action": {
        "default_icon": "clock.png",
        "default_popup": "popup.html"
    },

    "background":{
        "scripts": ["background.js"],
        "persistent": true
    }
    
}